{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mirrativ-app",
  "version": "0.1.0",
  "identifier": "com.mirrativ-app.app",
  "build": {
    "beforeDevCommand": "pnpm dev -- --host 127.0.0.1 --port 18080",
    "devUrl": "http://127.0.0.1:18080",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "mirrativ-app",
        "width": 1280,
        "height": 840,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "bin/libmpv-2.dll"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
